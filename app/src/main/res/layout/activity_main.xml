<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.y1247.star.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="35dp"
        android:text="@string/main_text"
        android:textSize="40sp"/>

    <Button
        android:text="@string/bu_weather"
        android:id="@+id/bu_Weather"
        style="@style/MyButtonStyle"/>

    <Button
        android:text="@string/bu_movie"
        android:id="@+id/bu_Movie"
        style="@style/MyButtonStyle"/>

    <Button
        android:text="@string/bu_shares"
        android:id="@+id/bu_Shares"
        style="@style/MyButtonStyle"/>

    <Button
        android:text="@string/bu_reader"
        android:id="@+id/bu_Reader"
        style="@style/MyButtonStyle"/>

    <Button
        android:text="@string/bu_news"
        android:id="@+id/bu_News"
        style="@style/MyButtonStyle"/>

</LinearLayout>
